.text-gray {
  color: #999;
}

.text-warning {
  color: #E85050;
}

.sub {
  font-size: smaller;
  vertical-align: sub;
}

.sup {
  font-size: smaller;
  vertical-align: top;
}

.small {
  font-size: smaller;
}

.container-center-vertical {
  min-height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
}

.container-center-horizontal {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
}

.with-line-top {
  position: relative;
}

.with-line-top::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
  height: 0;
  border-top: 1rpx solid #F2F1F5;
  transform: scaleY(0.5);
}

.with-line-bottom {
  position: relative;
}

.with-line-bottom::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
  height: 0;
  border-top: 1rpx solid #F2F1F5;
  transform: scaleY(0.5);
}

.block-gap {
  display: block;
  width: 100%;
  height: 20rpx;
  clear: both;
  background-color: #f7f7f7;
}
